<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="update"
		label="COM_BACKUP_CONFIG_LABEL"
		description="COM_BACKUP_CONFIG_DESC">
		
		<field
			name="access_key"
			type="text"
			label="COM_BACKUP_FIELD_ACCESS_KEY_LABEL"
			description="COM_BACKUP_FIELD_ACCESS_KEY_DESC"
			default=""
			required="true"
		/>

		<field
			name="debug_mode"
			type="list"
			label="COM_BACKUP_FIELD_DEBUG_MODE_LABEL"
			description="COM_BACKUP_FIELD_DEBUG_MODE_DESC"
			default="0"
			required="true">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>

	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_update"
			section="component"
		/>
	</fieldset>
</config>
